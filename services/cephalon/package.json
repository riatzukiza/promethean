{
    "name": "basic-bot",
    "version": "0.0.1",
    "description": "A proof-of-concept basic bot using @discordjs/voice",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && tsc",
        "test": "ava",
        "build:check": "tsc --noEmit --incremental false",
        "deploy": "npm run build && node --env-file=../../.env dist/util/deploy.js",
        "lint": "prettier --cache --check . && eslint src --ext mjs,js,ts --cache",
        "format": "prettier --cache --write . && eslint src --ext mjs,js,ts --fix --cache",
        "start": "npm run build && node --env-file=../../.env dist/index.js",
        "start:dev": "node --env-file=../../.env --loader ts-node/esm  src/index.ts"
    },
    "keywords": [
        "discord",
        "radio",
        "bot",
        "audio",
        "speakers",
        "hardware",
        "dj"
    ],
    "author": "Amish Shah <amishshah.2k@gmail.com>",
    "license": "UNLICENSE",
    "dependencies": {
        "@chroma-core/default-embed": "^0.1.8",
        "@discordjs/opus": "^0.10.0",
        "@discordjs/voice": "^0.18.0",
        "@types/wav": "^1.0.4",
        "chromadb": "^3.0.9",
        "discord.js": "^14.17.3",
        "dotenv": "^17.2.0",
        "javascript-time-ago": "^2.5.11",
        "libsodium-wrappers": "^0.7.13",
        "mongodb": "^6.17.0",
        "node-crc": "^1.3.2",
        "ollama": "^0.5.16",
        "pnpm": "^10.13.1",
        "prism-media": "^2.0.0-alpha.0",
        "sbd": "^1.0.19",
        "wav": "^1.0.2"
    },
    "devDependencies": {
        "@types/node": "^22.10.10",
        "ava": "^6.4.1",
        "eslint": "^8.57.0",
        "eslint-config-neon": "^0.1.62",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "5.7.3"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "files": [
            "tests/**/*.ts"
        ],
        "nodeArguments": [
            "--loader",
            "ts-node/esm"
        ]
    }
}
